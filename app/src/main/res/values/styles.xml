<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="titlebar" parent="Widget.Material3.AppBarLayout">
        <item name="android:textSize">50sp</item>
        <item name="android:backgroundTint">?colorPrimary</item>
        <item name="android:fontFamily">@font/bakerie</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?colorOnPrimary</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="firstTitle">
        <item name="android:textColor">@color/md_theme_light_primary</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:elevation">10dp</item>
    </style>

    <style name="secondTitle">
        <item name="android:textColor">?colorSecondary</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:elevation">10dp</item>
    </style>

    <style name="thirdTitle">
        <item name="android:textColor">?colorTertiary</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:elevation">10dp</item>
    </style>

    <style name="textInput" parent="Widget.Material3.TextInputEditText.OutlinedBox">
        <item name="hintTextColor">?colorOutline</item>
        <item name="android:textColor">?colorOnPrimaryContainer</item>
    </style>

    <style name="button">
        <item name="android:backgroundTint">?colorPrimaryContainer</item>
        <item name="rippleColor">?colorOnPrimaryContainer</item>
        <item name="android:textColor">?colorOnPrimaryContainer</item>
    </style>

    <style name="textButton" parent="Widget.Material3.Button.TextButton">
        <item name="android:backgroundTint">?colorPrimary</item>
        <item name="android:textColor">?colorOnPrimary</item>
    </style>

    <style name="cardView">
        <item name="android:backgroundTint">?colorTertiaryContainer</item>
        <item name="android:elevation">10dp</item>
        <item name="android:orientation">vertical</item>
        <item name="cardElevation">10dp</item>
        <item name="cardCornerRadius">15dp</item>
    </style>

    <style name="titleOnCardview">
        <item name="android:textColor">?colorOnTertiaryContainer</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:elevation">10dp</item>
    </style>

    <style name="navigationView" parent="Widget.Material3.NavigationView">
        <item name="android:backgroundTint">?colorPrimary</item>
        <item name="itemTextColor">?colorOnPrimaryContainer</item>
    </style>

</resources>
