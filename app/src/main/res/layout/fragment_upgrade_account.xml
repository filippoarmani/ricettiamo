<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/upgrade_chef"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.upgradeAccount.UpgradeAccountFragment">

        <LinearLayout
            android:id="@+id/cond"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/upgrade_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/montserrat"
                android:text="@string/upgrade_1"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:gravity="center"/>

        </LinearLayout>

        <View
            android:id="@+id/line"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_below="@id/cond"
            android:layout_marginTop="25dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:background="@color/black" />

        <LinearLayout
            android:id="@+id/templayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/line">

            <ImageView
                android:id="@+id/template"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="50dp"
                android:layout_marginStart="60dp"
                android:background="@drawable/template"
                android:elevation="10dp"
                android:contentDescription="@string/upgrade_2" />

            <TextView
                android:id="@+id/upgrade_2"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/montserrat"
                android:text="@string/upgrade_2"
                android:textColor="@color/black"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/starlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/templayout">

            <ImageView
                android:id="@+id/star"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="50dp"
                android:layout_marginStart="60dp"
                android:background="@drawable/star"
                android:elevation="10dp"
                android:contentDescription="@string/upgrade_3" />

            <TextView
                android:id="@+id/upgrade_3"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/montserrat"
                android:text="@string/upgrade_3"
                android:textColor="@color/black"
                android:textSize="16sp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/troplayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/starlayout">

            <ImageView
                android:id="@+id/trophystar"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="40dp"
                android:layout_marginStart="60dp"
                android:background="@drawable/ic_trophy"
                android:elevation="10dp"
                android:contentDescription="@string/upgrade_4" />

            <TextView
                android:id="@+id/upgrade_4"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/montserrat"
                android:text="@string/upgrade_4"
                android:textColor="@color/black"
                android:textSize="16sp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/upgradelayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/troplayout"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/upgrade_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:text="@string/upgrade_5"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:gravity="center"/>

            <TextView
                android:id="@+id/upgrade_6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:text="@string/upgrade_6"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:gravity="center"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:layout_marginTop="10dp"
                android:text="@string/upgrade_button"
                android:textSize="18sp"
                android:textStyle="bold"
                android:backgroundTint="@color/orange"
                app:cornerRadius="15dp" />

        </LinearLayout>

    </RelativeLayout>
