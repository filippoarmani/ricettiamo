<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".ui.impostazioni.ImpostazioniFragment">

    <LinearLayout
        android:id="@+id/modificheDati"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/modFotoDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="60dp"
            android:fontFamily="@font/montserrat"
            android:text="@string/change_photo_description"
            android:textColor="@color/orange"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <ImageButton
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/user"
            android:contentDescription="@string/profile"/>

        <EditText
            android:id="@+id/modificaDescr"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/back"
            android:elevation="10dp"
            android:fontFamily="@font/montserrat"
            android:hint="@string/description_chef"
            android:importantForAutofill="no"
            android:maxWidth="1000dp"
            android:maxLines="4"
            android:minLines="4"
            android:padding="10dp"
            android:inputType="textMultiLine"
            android:textColor="@color/black"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/modifichePass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/modFotoDesc"
        android:orientation="vertical"
        tools:ignore="NotSibling">

        <TextView
            android:id="@+id/modPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="350dp"
            android:fontFamily="@font/montserrat"
            android:text="@string/change_password"
            android:textColor="@color/orange"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/consiglio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="30dp"
            android:fontFamily="@font/montserrat"
            android:text="@string/advice"
            android:textColor="@color/black"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/modifichePass"
        android:orientation="vertical">

        <EditText
            android:id="@+id/passAtt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="40dp"
            android:fontFamily="@font/montserrat"
            android:minHeight="48dp"
            android:hint="@string/my_password"
            android:textColor = "?android:textColorPrimary"
            android:inputType="text"
            android:textSize="16sp"
            android:importantForAutofill="no" />

        <EditText
            android:id="@+id/passNew"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="40dp"
            android:fontFamily="@font/montserrat"
            android:minHeight="48dp"
            android:hint="@string/new_password"
            android:textColor = "?android:textColorPrimary"
            android:inputType="text"
            android:textSize="16sp"
            android:importantForAutofill="no" />

        <EditText
            android:id="@+id/passNewAgain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="40dp"
            android:fontFamily="@font/montserrat"
            android:minHeight="48dp"
            android:hint="@string/new_password_again"
            android:textColor = "?android:textColorPrimary"
            android:inputType="text"
            android:textSize="16sp"
            android:importantForAutofill="no" />

    </LinearLayout>

    <Button
        android:id="@+id/salva"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pass"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/orange"
        android:fontFamily="@font/montserrat"
        android:text="@string/save_changes"
        android:textSize="18sp"
        android:textStyle="bold"
        app:cornerRadius="15dp"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>