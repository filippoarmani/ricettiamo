<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ScrollingFragment">

    <!--parent-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--barra-->
        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="13dp"
            android:layout_height="3000dp"
            android:background="@color/orange"/>

    <!--foto-->
    <LinearLayout
        android:id="@+id/picture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageRecipe"
            android:layout_width="match_parent"
            android:layout_height="248dp"
            android:background="@drawable/carbonara"
            android:contentDescription="@string/toDo" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/picture">

    <!--nome ricetta informazioni-->
    <RelativeLayout
        android:id="@+id/recipe_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/nameRecipe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:text="@string/nameRecipe"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/montserrat"
            android:text="@string/informations"
            android:textColor="@color/black"
            android:textSize="16sp" />

    </RelativeLayout>

    <!--ingredienti-->
    <RelativeLayout
        android:id="@+id/recipe_2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/recipe_1"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/ingredients"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:text="@string/ingredients"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <!--ingrediente1-->
            <LinearLayout
                android:id="@+id/ingredient_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/list_item"
                android:contentDescription="@string/toDo"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/montserrat"
                android:text="@string/ingredient_1"
                android:textColor="@color/black"
                android:textSize="16sp"
                />

            </LinearLayout>

            <!--ingrediente2-->
            <LinearLayout
                android:id="@+id/ingredient_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ingredient_1"
                android:layout_marginTop="1dp">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/list_item"
                    android:contentDescription="@string/toDo"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/montserrat"
                    android:text="@string/ingredient_2"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

            </LinearLayout>

            <!--ingrediente3-->
            <LinearLayout
                android:id="@+id/ingredient_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ingredient_2"
                android:layout_marginTop="1dp">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/list_item"
                    android:contentDescription="@string/toDo"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/montserrat"
                    android:text="@string/ingredient_3"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

            </LinearLayout>

            <!--ingrediente4-->
            <LinearLayout
                android:id="@+id/ingredient_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ingredient_3"
                android:layout_marginTop="1dp">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/list_item"
                    android:contentDescription="@string/toDo"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/montserrat"
                    android:text="@string/ingredient_4"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

            </LinearLayout>

            <!--ingrediente5-->
            <LinearLayout
                android:id="@+id/ingredient_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ingredient_4"
                android:layout_marginTop="1dp">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/list_item"
                    android:contentDescription="@string/toDo"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/montserrat"
                    android:text="@string/ingredient_5"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

            </LinearLayout>

        </RelativeLayout>

    <!--preparazione-->
    <RelativeLayout
        android:id="@+id/recipe_3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/recipe_2"
        android:layout_marginStart="30dp">

        <TextView
            android:id="@+id/prep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/montserrat"
            android:text="@string/preparation"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/preparation_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/prep">

            <TextView
                android:id="@+id/prep_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:layout_marginTop="10dp"
                android:text="@string/prep_1"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:maxWidth="360dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="248dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/carb_1"
                android:layout_below="@+id/prep_1"
                android:contentDescription="@string/toDo"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/preparation_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/preparation_1">

            <TextView
                android:id="@+id/prep_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:text="@string/prep_2"
                android:layout_marginTop="15dp"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:maxWidth="360dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="248dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/carb_2"
                android:layout_below="@+id/prep_2"
                android:contentDescription="@string/toDo"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/preparation_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/preparation_2">

            <TextView
                android:id="@+id/prep_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:text="@string/prep_3"
                android:layout_marginTop="15dp"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:maxWidth="360dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="248dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/carb_3"
                android:layout_below="@+id/prep_3"
                android:contentDescription="@string/toDo"/>

        </RelativeLayout>

    </RelativeLayout>

    <!--consiglio-->
    <RelativeLayout
        android:id="@+id/recipe_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/recipe_3">

            <TextView
                android:id="@+id/tip_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:text="@string/tip_1"
                android:layout_marginTop="30dp"
                android:textColor="@color/orange"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_below="@+id/tip_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:text="@string/tip_2"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:maxWidth="360dp"/>

    </RelativeLayout>

    <!--review-->
    <RelativeLayout
        android:id="@+id/recipe_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/recipe_4">

            <TextView
                android:id="@+id/review"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:text="@string/review"
                android:layout_marginTop="30dp"
                android:textColor="@color/orange"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <!--scroll delle recensioni-->
            <ScrollView
                android:id="@+id/scrollreview"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_below="@+id/review">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:id="@+id/box_1"
                        android:layout_width="360dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/back"
                        android:layout_marginTop="5dp">

                        <TextView
                            android:id="@+id/reviewer_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat"
                            android:text="@string/reviewer_1"
                            android:layout_margin="10dp"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/review_1"
                            android:layout_below="@+id/reviewer_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat"
                            android:text="@string/review_1"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:maxWidth="360dp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@+id/review_1">

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_margin="10dp"
                                android:background="@drawable/star"
                                android:contentDescription="@string/toDo" />

                            <TextView
                                android:id="@+id/star_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/montserrat"
                                android:text="@string/star_1"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="15dp"
                                android:textColor="@color/black"
                                android:textSize="16sp" />

                        </LinearLayout>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/box_2"
                        android:layout_width="360dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/back"
                        android:layout_marginTop="15dp"
                        android:layout_below="@+id/box_1">

                        <TextView
                            android:id="@+id/reviewer_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat"
                            android:text="@string/reviewer_2"
                            android:layout_margin="10dp"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/review_2"
                            android:layout_below="@+id/reviewer_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat"
                            android:text="@string/review_2"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:maxWidth="360dp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@+id/review_2">

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_margin="10dp"
                                android:background="@drawable/star"
                                android:contentDescription="@string/toDo" />

                            <TextView
                                android:id="@+id/star_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/montserrat"
                                android:text="@string/star_2"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="15dp"
                                android:textColor="@color/black"
                                android:textSize="16sp" />

                        </LinearLayout>

                    </RelativeLayout>

                </RelativeLayout>

            </ScrollView>

        <LinearLayout
            android:id="@+id/button_review"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/scrollreview"
            android:layout_marginTop="15dp">

            <Button
                android:id="@+id/ric"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/orange"
                android:fontFamily="@font/montserrat"
                android:text="@string/write_review"
                android:textSize="18sp"
                android:textStyle="bold"
                app:cornerRadius="15dp" />

        </LinearLayout>

    </RelativeLayout>

    </RelativeLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@color/orange"
            android:orientation="vertical"
            android:layout_below="@id/body"
            android:layout_marginTop="40dp">

            <ImageView
                android:id="@+id/imageViewBottom"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="40dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/logo_round"
                android:contentDescription="@string/toDo"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageViewBottom"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/textViewInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:text="@string/info"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:fontFamily="@font/montserrat"
                    android:textStyle="bold" />

                <!-- aggiungere onClick o far diventare bottoni i quattro seguenti-->

                <TextView
                    android:id="@+id/textView_ChiSiamo"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_weight="1"
                    android:background="#00FFFFFF"
                    android:text="@string/about_us"
                    android:textColor="@color/white"
                    android:fontFamily="@font/montserrat"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/textView_Accedi"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_weight="1"
                    android:background="#00FFFFFF"
                    android:text="@string/login"
                    android:textColor="@color/white"
                    android:fontFamily="@font/montserrat"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/textView_UpgradeCuoco"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_weight="1"
                    android:background="#00FFFFFF"
                    android:text="@string/upgrade_account"
                    android:textColor="@color/white"
                    android:fontFamily="@font/montserrat"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/textView_RitornaInAlto"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_weight="1"
                    android:background="#00FFFFFF"
                    android:text="@string/return_up"
                    android:textAlignment="textStart"
                    android:textColor="@color/white"
                    android:fontFamily="@font/montserrat"
                    android:textSize="16sp" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </RelativeLayout>

</androidx.core.widget.NestedScrollView>