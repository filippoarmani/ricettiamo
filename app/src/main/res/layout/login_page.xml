<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/l_logo"
        android:layout_width="195dp"
        android:layout_height="195dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="47dp"
        app:srcCompat="@drawable/logo" />

    <EditText
        android:id="@+id/l_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="24dp"
        android:layout_below="@+id/l_logo"
        android:layout_centerHorizontal="true"
        app:startIconDrawable="@drawable/email_icon"
        style="@style/Widget.Design.TextInputLayout"
        android:ems="10"
        android:hint="@string/email"
        android:inputType="textEmailAddress"
        android:minHeight="48dp"
        />

    <EditText
        android:id="@+id/l_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="24dp"
        android:layout_below="@+id/l_email"
        android:layout_centerHorizontal="true"
        app:icon="@drawable/password_icon"

        android:ems="10"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:minHeight="48dp" />

    <Button
        android:id="@+id/l_passwordD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/l_password"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="24dp"
        android:layout_alignParentEnd="true"
        android:text="@string/p_dimenticata"
        android:textSize="14sp"
        app:textAllCaps="false"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        />

    <Button
        android:id="@+id/l_login"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginEnd="24dp"
        android:layout_below="@+id/l_passwordD"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:backgroundTint="@color/orange"
        android:text="@string/login"
        app:cornerRadius="24dp" />

    <RelativeLayout
        android:id="@+id/l_or"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/l_login"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@id/l_login">

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="24dp"
            android:layout_toStartOf="@id/txt_or"
            android:background="@color/material_dynamic_neutral_variant40" />

        <TextView
            android:id="@+id/txt_or"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="@string/txt_or" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="24dp"
            android:layout_toEndOf="@id/txt_or"
            android:background="@color/material_dynamic_neutral_variant40" />

    </RelativeLayout>

    <Button
        android:id="@+id/button_Lgin_Google"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/l_or"
        android:layout_centerHorizontal="true"


        android:layout_marginTop="12dp"
        android:layout_marginEnd="24dp"
        android:text="@string/login_google"
        android:textSize="14sp"
        android:textAllCaps="true"
        app:icon="@drawable/google_icon"
        android:textColor="@color/google_login_text"
        app:backgroundTint="@color/google_login_button"
        app:iconGravity="textStart"
        app:iconTint="@null"
         />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_Lgin_Google"
        android:layout_marginTop="19dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/l_nuovoUtente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_nUtente" />

        <Button
            android:id="@+id/l_registrati"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="24dp"
            android:text="@string/register"
            android:textSize="12sp"
            app:textAllCaps="false"
            style="@style/Widget.MaterialComponents.Button.TextButton" />

    </LinearLayout>

</RelativeLayout>
