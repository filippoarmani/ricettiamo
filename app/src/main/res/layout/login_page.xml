<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".LoginActivity">

    <ImageView
        android:id="@+id/l_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/l_email"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="47dp"
        android:layout_marginTop="47dp"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="47dp"
        app:srcCompat="@drawable/logo_round" />

    <EditText
        android:id="@+id/l_email"
        style="@style/Widget.Design.TextInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/l_password"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="12dp"

        android:background="@drawable/edit_text_background"
        android:backgroundTint="@color/orange_w"
        android:drawableStart="@drawable/ic_email"

        android:drawablePadding="10dp"
        android:ems="10"
        android:fontFamily="@font/montserrat"
        android:hint="@string/email"
        android:importantForAutofill="no"
        android:inputType="textEmailAddress"
        android:minHeight="48dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"


        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/l_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/l_passwordD"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="18dp"

        android:background="@drawable/edit_text_background"
        android:backgroundTint="@color/orange_w"
        android:drawableStart="@drawable/ic_password"

        android:drawablePadding="10dp"
        android:ems="10"
        android:fontFamily="@font/montserrat"
        android:hint="@string/password"
        android:importantForAutofill="no"
        android:inputType="textPassword"
        android:minHeight="48dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="18sp"
        app:passwordToggleEnabled="true" />


    <Button
        android:id="@+id/l_passwordD"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/l_login"
        android:layout_alignEnd="@id/l_password"
        android:layout_marginBottom="24dp"

        android:fontFamily="@font/montserrat"
        android:text="@string/p_lost"
        android:textColor="@color/orange"
        android:textSize="14sp"
        app:textAllCaps="false" />

    <Button
        android:id="@+id/l_login"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_above="@+id/l_or"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="26dp"

        android:backgroundTint="@color/orange"
        android:fontFamily="@font/montserrat"
        android:text="@string/login"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold"
        app:cornerRadius="24dp" />

    <RelativeLayout
        android:id="@+id/l_or"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_Lgin_Google"
        android:layout_marginBottom="12dp"
        app:layout_constraintTop_toBottomOf="@id/l_login">

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="24dp"
            android:layout_toStartOf="@id/txt_or"
            android:background="@color/material_dynamic_neutral_variant40" />

        <TextView
            android:id="@+id/txt_or"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="@string/txt_or" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="24dp"
            android:layout_toEndOf="@id/txt_or"
            android:background="@color/material_dynamic_neutral_variant40" />

    </RelativeLayout>

    <Button
        android:id="@+id/button_Lgin_Google"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linear_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="19dp"

        android:fontFamily="@font/montserrat"
        android:text="@string/login_google"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"

        app:backgroundTint="@color/orange_w"
        app:cornerRadius="24dp"
        app:icon="@drawable/google_icon"
        app:iconGravity="textStart"
        app:iconSize="20dp"
        app:iconTint="@null" />

    <LinearLayout
        android:id="@+id/linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="29dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/l_nuovoUtente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:text="@string/txt_nUser" />

        <Button
            android:id="@+id/l_registrati"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="24dp"

            android:fontFamily="@font/montserrat"
            android:text="@string/sign_in"
            android:textColor="@color/orange"
            android:textSize="12sp"
            app:textAllCaps="false" />

    </LinearLayout>

</RelativeLayout>
