        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/search_recipes">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <LinearLayout
                android:id="@id/home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="30dp"
                android:layout_marginStart="30dp"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/textViewPiattiPreferiti"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:text="@string/favourite_dishes"
                    android:fontFamily="@font/montserrat"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <HorizontalScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/favourite_dishes"
                    android:layout_marginTop="10dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageViewRicettePreferite1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="32dp"
                            app:srcCompat="@drawable/carb" />

                        <ImageView
                            android:id="@+id/imageViewRicettePreferite2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="32dp"
                            app:srcCompat="@drawable/guac" />
                    </LinearLayout>
                </HorizontalScrollView>

                <TextView
                    android:id="@+id/textViewAntipasti"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:text="@string/starters"
                    android:fontFamily="@font/montserrat"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"/>

                <HorizontalScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/starters"
                    android:layout_marginTop="10dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageViewAntipasti1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="32dp"
                            app:srcCompat="@drawable/carb" />

                        <ImageView
                            android:id="@+id/imageViewAntipasti2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="32dp"
                            app:srcCompat="@drawable/guac" />
                    </LinearLayout>

                </HorizontalScrollView>

                <TextView
                    android:id="@+id/textViewPrimiPiatti"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:text="@string/first_dishes"
                    android:fontFamily="@font/montserrat"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"/>

                <HorizontalScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/first_dishes"
                    android:layout_marginTop="10dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageViewPrimiPiatti1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="32dp"
                            app:srcCompat="@drawable/carb" />

                        <ImageView
                            android:id="@+id/imageViewPrimiPiatti2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="32dp"
                            app:srcCompat="@drawable/guac" />
                    </LinearLayout>
                </HorizontalScrollView>

                <TextView
                    android:id="@+id/textViewSecondiPiatti"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:text="@string/second_dishes"
                    android:fontFamily="@font/montserrat"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"/>

                <HorizontalScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/second_dishes"
                    android:layout_marginTop="10dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageViewSecondiPiatti1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="32dp"
                            app:srcCompat="@drawable/carb" />

                        <ImageView
                            android:id="@+id/imageViewSecondiPiatti2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="32dp"
                            app:srcCompat="@drawable/guac" />
                    </LinearLayout>
                </HorizontalScrollView>

                <TextView
                    android:id="@+id/textViewDolci"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:text="@string/dessert"
                    android:fontFamily="@font/montserrat"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"/>

                <HorizontalScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/dessert"
                    android:layout_marginTop="10dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageViewDolci1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="32dp"
                            app:srcCompat="@drawable/carb" />

                        <ImageView
                            android:id="@+id/imageViewDolci2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="32dp"
                            app:srcCompat="@drawable/guac" />
                    </LinearLayout>

                </HorizontalScrollView>

            </LinearLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:background="@color/orange"
                    android:orientation="vertical"
                    app:layout_constraintTop_toBottomOf="@id/home"
                    android:layout_marginTop="40dp">

                    <ImageView
                        android:id="@+id/imageViewBottom"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginStart="40dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/logo_round" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/imageViewBottom"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:id="@+id/textViewInfo"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_weight="1"
                            android:text="@string/info"
                            android:textColor="@color/white"
                            android:textSize="18sp"
                            android:fontFamily="@font/montserrat"
                            android:textStyle="bold" />

                        <!-- aggiungere onClick o far diventare bottoni i quattro seguenti-->

                        <TextView
                            android:id="@+id/textView_ChiSiamo"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:layout_weight="1"
                            android:background="#00FFFFFF"
                            android:text="@string/about_us"
                            android:textColor="@color/white"
                            android:fontFamily="@font/montserrat"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/textView_Accedi"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:layout_weight="1"
                            android:background="#00FFFFFF"
                            android:text="@string/login"
                            android:textColor="@color/white"
                            android:fontFamily="@font/montserrat"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/textView_UpgradeCuoco"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:layout_weight="1"
                            android:background="#00FFFFFF"
                            android:text="@string/upgrade_account"
                            android:textColor="@color/white"
                            android:fontFamily="@font/montserrat"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/textView_RitornaInAlto"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:layout_weight="1"
                            android:background="#00FFFFFF"
                            android:text="@string/return_up"
                            android:textAlignment="textStart"
                            android:textColor="@color/white"
                            android:fontFamily="@font/montserrat"
                            android:textSize="16sp" />

                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>



            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>