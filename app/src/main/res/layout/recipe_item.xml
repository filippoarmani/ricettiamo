<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/picture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/src_imageRecipe"
            android:layout_width="match_parent"
            android:layout_height="248dp"
            android:background="@drawable/esempio_carbonara"
            android:contentDescription="@string/toDo" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/picture">

        <!--nome ricetta informazioni-->
        <RelativeLayout
            android:id="@+id/recipe_1"
            android:layout_width="354dp"
            android:layout_height="136dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/src_nameRecipe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:text="@string/nameRecipe"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/src_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:fontFamily="@font/montserrat"
                android:text="@string/informations"
                android:textColor="@color/black"
                android:textSize="16sp" />

        </RelativeLayout>

        <!--ingredienti-->
        <RelativeLayout
            android:id="@+id/recipe_2"
            android:layout_width="363dp"
            android:layout_height="195dp"
            android:layout_below="@id/recipe_1"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/ingredients"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:text="@string/ingredients"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <!--ingrediente1-->
            <LinearLayout
                android:id="@+id/ingredient_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/back_orange"
                    android:contentDescription="@string/toDo" />

                <TextView
                    android:id="@+id/src_ingredient_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/montserrat"
                    android:text="@string/ingredient_1"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

            </LinearLayout>

            <!--ingrediente2-->
            <LinearLayout
                android:id="@+id/ingredient_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ingredient_1"
                android:layout_marginTop="1dp"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/back_orange"
                    android:contentDescription="@string/toDo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/montserrat"
                    android:text="@string/ingredient_2"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

            </LinearLayout>

            <!--ingrediente3-->
            <LinearLayout
                android:id="@+id/ingredient_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ingredient_2"
                android:layout_marginTop="1dp"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/back_orange"
                    android:contentDescription="@string/toDo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/montserrat"
                    android:text="@string/ingredient_3"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

            </LinearLayout>

            <!--ingrediente4-->
            <LinearLayout
                android:id="@+id/ingredient_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ingredient_3"
                android:layout_marginTop="1dp"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/back_orange"
                    android:contentDescription="@string/toDo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/montserrat"
                    android:text="@string/ingredient_4"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

            </LinearLayout>

            <!--ingrediente5-->
            <LinearLayout
                android:id="@+id/ingredient_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ingredient_4"
                android:layout_marginTop="1dp"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/back_orange"
                    android:contentDescription="@string/toDo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/montserrat"
                    android:text="@string/ingredient_5"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>