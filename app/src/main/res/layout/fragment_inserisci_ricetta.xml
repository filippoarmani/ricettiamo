<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".inserisci_ricetta">

    <!--parent-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--barra-->
        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="13dp"
            android:layout_height="820dp"
            android:background="@color/orange"/>

        <RelativeLayout
            android:id="@+id/body"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <!--foto-->
        <LinearLayout
            android:id="@+id/picture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/imageRecipe"
                android:layout_width="match_parent"
                android:layout_height="248dp"
                android:background="@drawable/back"
                android:text="@string/add_photo"
                android:textAllCaps="false"
                android:textSize="18sp" />

        </LinearLayout>

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/heart"
            android:layout_marginTop="200dp"
            android:layout_marginStart="30dp"
            android:contentDescription="@string/toDo"/>

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/check"
            android:layout_marginTop="200dp"
            android:layout_marginStart="350dp"
            android:contentDescription="@string/toDo"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/picture">

            <!--nome ricetta informazioni-->
            <RelativeLayout
                android:id="@+id/recipe_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp">

                <EditText
                    android:id="@+id/nameRecipe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat"
                    android:text="@string/type_nameRecipe"
                    android:background="@drawable/back"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:padding="5dp"/>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/nameRecipe">

                <TextView
                    android:id="@+id/difficolty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/montserrat"
                    android:text="@string/difficolty"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                    <Spinner
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="150dp"
                        android:layout_marginTop="20dp"
                        android:entries="@array/qta_array"
                        android:minWidth="30dp"
                        android:minHeight="20dp"/>

                    <TextView
                        android:id="@+id/prep_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40dp"
                        android:fontFamily="@font/montserrat"
                        android:text="@string/prep_time"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <Spinner
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:entries="@array/qta_array"
                        android:layout_marginTop="40dp"
                        android:layout_marginStart="150dp"
                        android:minWidth="30dp"
                        android:minHeight="20dp"/>

                    <TextView
                        android:id="@+id/cost"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="60dp"
                        android:fontFamily="@font/montserrat"
                        android:text="@string/cost"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <Spinner
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:entries="@array/qta_array"
                        android:layout_marginTop="60dp"
                        android:layout_marginStart="150dp"
                        android:minWidth="30dp"
                        android:minHeight="20dp" />

                    <TextView
                        android:id="@+id/serving"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="80dp"
                        android:fontFamily="@font/montserrat"
                        android:text="@string/serving"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <Spinner
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:entries="@array/qta_array"
                        android:layout_marginTop="80dp"
                        android:layout_marginStart="150dp"
                        android:minWidth="30dp"
                        android:minHeight="20dp" />

                </RelativeLayout>

            </RelativeLayout>

            <!--ingredienti-->
            <RelativeLayout
                android:id="@+id/recipe_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/recipe_1"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/ingredients"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat"
                    android:text="@string/ingredients"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <!--ingrediente-->
                <Button
                    android:id="@+id/add_ingredient"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ingredients"
                    android:fontFamily="@font/montserrat"
                    android:text="@string/add_ingredient"
                    android:background="@drawable/back"
                    android:textColor="@color/white"
                    android:layout_marginTop="10dp"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textAllCaps="false"/>

            </RelativeLayout>

            <!--preparazione-->
            <RelativeLayout
                android:id="@+id/recipe_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/recipe_2"
                android:layout_marginStart="30dp">

                <TextView
                    android:id="@+id/prep"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/montserrat"
                    android:text="@string/preparation"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:id="@+id/preparation_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/prep">

                    <Button
                        android:id="@+id/add_step"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat"
                        android:text="@string/add_step"
                        android:background="@drawable/back"
                        android:textColor="@color/white"
                        android:layout_marginTop="10dp"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textAllCaps="false"/>

                    <Button
                        android:id="@+id/add_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/add_step"
                        android:fontFamily="@font/montserrat"
                        android:text="@string/add_photo_step"
                        android:background="@drawable/back"
                        android:textColor="@color/white"
                        android:layout_marginTop="10dp"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textAllCaps="false"/>

                </RelativeLayout>

            </RelativeLayout>

            </RelativeLayout>

        </RelativeLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@color/orange"
            android:orientation="vertical"
            android:layout_below="@id/body"
            android:layout_marginTop="40dp">

            <ImageView
                android:id="@+id/imageViewBottom"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="40dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/logo_round"
                android:contentDescription="@string/toDo"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageViewBottom"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/textViewInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:text="@string/info"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:fontFamily="@font/montserrat"
                    android:textStyle="bold" />

                <!-- aggiungere onClick o far diventare bottoni i quattro seguenti-->

                <TextView
                    android:id="@+id/textView_ChiSiamo"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_weight="1"
                    android:background="#00FFFFFF"
                    android:text="@string/about_us"
                    android:textColor="@color/white"
                    android:fontFamily="@font/montserrat"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/textView_Accedi"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_weight="1"
                    android:background="#00FFFFFF"
                    android:text="@string/login"
                    android:textColor="@color/white"
                    android:fontFamily="@font/montserrat"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/textView_UpgradeCuoco"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_weight="1"
                    android:background="#00FFFFFF"
                    android:text="@string/upgrade_account"
                    android:textColor="@color/white"
                    android:fontFamily="@font/montserrat"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/textView_RitornaInAlto"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_weight="1"
                    android:background="#00FFFFFF"
                    android:text="@string/return_up"
                    android:textAlignment="textStart"
                    android:textColor="@color/white"
                    android:fontFamily="@font/montserrat"
                    android:textSize="16sp" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </RelativeLayout>

</androidx.core.widget.NestedScrollView>