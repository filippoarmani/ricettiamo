<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:background="?android:selectableItemBackground"
    android:descendantFocusability="blocksDescendants"
    android:padding="5dp">

    <ImageView
        android:id="@+id/list_item_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/circle"
        android:contentDescription="@string/ingredients"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/Fridge_textName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/Fridge_textName"></ImageView>

    <TextView
        android:id="@+id/Fridge_textName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/montserrat"
        android:text="@string/text"
        android:textColor="?android:textColorPrimary"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/button_add"
        app:layout_constraintEnd_toStartOf="@+id/Fridge_textQta"
        app:layout_constraintStart_toEndOf="@+id/list_item_icon"
        app:layout_constraintTop_toTopOf="@+id/button_add" />

    <TextView
        android:id="@id/Fridge_textQta"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="190dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/montserrat"
        android:text="@string/text"
        android:textColor="?android:textColorPrimary"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/Fridge_textSize"
        app:layout_constraintEnd_toStartOf="@+id/Fridge_textSize"
        app:layout_constraintTop_toTopOf="@+id/Fridge_textSize" />

    <TextView
        android:id="@+id/Fridge_textSize"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/montserrat"
        android:text="@string/text"
        android:textColor="?android:textColorPrimary"
        android:textSize="18sp"

        app:layout_constraintBottom_toBottomOf="@+id/button_add"
        app:layout_constraintEnd_toStartOf="@+id/button_add"
        app:layout_constraintTop_toTopOf="@+id/button_add" />

   <Button android:focusable="false" android:focusableInTouchMode="false"
        android:id="@+id/button_add"
        style="@style/textButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="8dp"
        android:linksClickable="false"
        android:text="@string/add"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/button_less"
        app:layout_constraintEnd_toStartOf="@+id/button_less"
        app:layout_constraintTop_toTopOf="@+id/button_less" />

   <Button android:focusable="false" android:focusableInTouchMode="false"
        android:id="@+id/button_less"
        style="@style/textButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:linksClickable="false"
        android:text="@string/less"
        android:textSize="20sp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>