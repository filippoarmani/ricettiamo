<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.profilo.ProfiloFragment">

    <LinearLayout
        android:id="@+id/dati"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:id="@+id/user"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="90dp"
            android:background="@drawable/user"
            android:contentDescription="@string/full_name"
            android:elevation="10dp" />

        <TextView
            android:id="@+id/nomeCognome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/montserrat"
            android:text="@string/full_name"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"/>

        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:fontFamily="@font/montserrat"
            android:text="@string/email"
            android:textColor="@color/black"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/desc"
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/dati"
        android:layout_marginTop="20dp"
        android:background="@drawable/back"
        android:elevation="10dp"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/descrText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/montserrat"
            android:text="@string/description_chef"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_margin="16dp" />

    </LinearLayout>

    <Button
        android:id="@+id/ric"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/desc"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/orange"
        android:fontFamily="@font/montserrat"
        android:text="@string/my_recipes"
        android:textSize="18sp"
        android:textStyle="bold"
        app:cornerRadius="15dp" />

    <LinearLayout
        android:id="@+id/startrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/ric">

    <RelativeLayout
        android:id="@+id/starlayout"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginStart="30dp"
        android:background="@drawable/back"
        android:elevation="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/miestelle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="@string/my_stars"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:fontFamily="@font/montserrat"
            android:elevation="10dp"/>

        <ImageView
            android:id="@+id/stella"
            android:contentDescription="@string/my_stars"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="85dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/star"
            android:elevation="10dp"/>

        <TextView
            android:id="@+id/stelleTot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="95dp"
            android:layout_marginStart="95dp"
            android:text="@string/max_stars"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:fontFamily="@font/montserrat"
            android:elevation="10dp"/>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/troplayout"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginStart="30dp"
        android:background="@drawable/back"
        android:elevation="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/miapos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="@string/my_position"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:textStyle="bold"
            android:fontFamily="@font/montserrat"
            android:elevation="10dp"/>

        <ImageView
            android:id="@+id/trofeo"
            android:contentDescription="@string/my_stars"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="85dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/ic_trophy"
            android:elevation="10dp"/>

        <TextView
            android:id="@+id/pos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="95dp"
            android:layout_marginStart="95dp"
            android:text="@string/position"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:fontFamily="@font/montserrat"
            android:elevation="10dp"/>

    </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
