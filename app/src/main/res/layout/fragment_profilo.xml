<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.profilo.ProfiloFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/profile"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        tools:context="">

        <View
            android:id="@+id/banprof"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/ban" />

        <TextView
            android:id="@+id/profText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="5dp"
            android:fontFamily="@font/bakerie"
            android:text="@string/account"
            android:textColor="@color/white"
            android:textSize="50dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/user"
            android:contentDescription="@string/full_name"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="160dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="120dp"
            android:background="@drawable/user"
            android:elevation="10dp" />

        <ImageView
            android:id="@+id/menulat"
            android:contentDescription="@string/full_name"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="30dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="25dp"
            android:background="@drawable/menulat"
            android:elevation="10dp" />

        <TextView
            android:id="@+id/nomeCognome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/montserrat"
            android:text="@string/full_name"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nomeCognome"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="1dp"
            android:fontFamily="@font/montserrat"
            android:text="@string/email"
            android:textColor="@color/black"
            android:textSize="20sp" />


        <TextView
            android:id="@+id/descrizioneTesto"
            android:layout_width="350dp"
            android:layout_height="100dp"
            android:layout_below="@+id/email"
            android:layout_centerInParent="true"
            android:layout_marginTop="15dp"
            android:background="@drawable/back"
            android:fontFamily="@font/montserrat"
            android:gravity="center"
            android:text="@string/description_chef"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:elevation="10dp"/>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/ric"
            android:layout_width="350dp"
            android:layout_height="100dp"
            android:layout_below="@+id/descrizioneTesto"
            android:layout_centerInParent="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/back"
            android:paddingStart="18dp"
            android:paddingEnd="1dp"
            tools:context=".MainActivity"
            android:elevation="10dp">

            <TextView
                android:id="@+id/le_mie_rice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/my_recipes"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:fontFamily="@font/montserrat" />

        </LinearLayout>

        <View
            android:id="@+id/stelle"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_below="@+id/ric"
            android:layout_marginTop="28dp"
            android:layout_marginStart="30dp"
            android:background="@drawable/back"
            android:paddingTop="18dp"
            android:elevation="10dp"/>

        <TextView
            android:id="@+id/miestelle"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ric"
            android:layout_centerVertical="true"
            android:layout_marginTop="40dp"
            android:text="@string/my_stars"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:paddingStart="40dp"
            android:paddingEnd="1dp"
            android:textStyle="bold"
            android:fontFamily="@font/montserrat"
            android:elevation="10dp"/>

        <ImageView
            android:id="@+id/stella"
            android:contentDescription="@string/max_stars"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="60dp"
            android:layout_marginBottom="60dp"
            android:background="@drawable/ic_star_24"
            android:elevation="10dp"/>

        <TextView
            android:id="@+id/stelleTot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="70dp"
            android:layout_alignParentBottom="true"
            android:text="@string/max_stars"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:paddingStart="130dp"
            android:paddingEnd="1dp"
            android:fontFamily="@font/montserrat"
            android:elevation="10dp"/>

        <View
            android:id="@+id/classifica"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_below="@+id/ric"
            android:layout_marginTop="28dp"
            android:layout_marginStart="220dp"
            android:background="@drawable/back"
            android:paddingStart="18dp"
            android:paddingEnd="1dp"
            android:paddingTop="18dp"
            android:elevation="10dp"/>

        <TextView
            android:id="@+id/miapos"
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ric"
            android:layout_centerVertical="true"
            android:layout_marginTop="40dp"
            android:text="@string/my_position"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:paddingStart="230dp"
            android:paddingEnd="1dp"
            android:textStyle="bold"
            android:fontFamily="@font/montserrat"
            android:elevation="10dp"/>

        <ImageView
            android:id="@+id/trofeo"
            android:contentDescription="@string/position"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="250dp"
            android:layout_marginBottom="60dp"
            android:background="@drawable/trophy"
            android:elevation="10dp"/>

        <TextView
            android:id="@+id/pos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="70dp"
            android:layout_alignParentBottom="true"
            android:text="@string/position"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:paddingStart="310dp"
            android:paddingEnd="1dp"
            android:fontFamily="@font/montserrat"
            android:elevation="10dp"/>

    </RelativeLayout>

</FrameLayout>