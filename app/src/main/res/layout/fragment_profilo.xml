<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_menu_24"
    tools:context=".ui.profilo.ProfiloFragment">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/top_appbar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/orange"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="@string/profile"
        app:titleCentered="true"
        app:titleTextAppearance="@style/title"
        app:titleTextColor="@color/white" />

    <ImageView
        android:id="@+id/user"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/top_appbar"
        android:layout_alignParentStart="true"
        android:layout_marginStart="160dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/user"
        android:contentDescription="@string/full_name"
        android:elevation="10dp" />

    <Button
        android:id="@+id/btn_menu"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/transparent"
        app:icon="@drawable/ic_menu_24"
        app:iconGravity="textEnd"
        app:iconPadding="1dp"
        app:iconSize="32dp"
        app:iconTint="@color/white"/>

    <TextView
        android:id="@+id/nomeCognome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/montserrat"
        android:text="@string/full_name"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nomeCognome"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="1dp"
        android:fontFamily="@font/montserrat"
        android:text="@string/email"
        android:textColor="@color/black"
        android:textSize="20sp" />


    <TextView
        android:id="@+id/descrizioneTesto"
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:layout_below="@+id/email"
        android:layout_centerInParent="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/back"
        android:elevation="10dp"
        android:fontFamily="@font/montserrat"
        android:gravity="center"
        android:text="@string/description_chef"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <LinearLayout
        android:id="@+id/ric"
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:layout_below="@+id/descrizioneTesto"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/back"
        android:elevation="10dp"
        android:paddingStart="18dp"
        android:paddingEnd="1dp"
        tools:context=".MainActivity">

        <TextView
            android:id="@+id/le_mie_rice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/montserrat"
            android:text="@string/my_recipes"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

    <View
        android:id="@+id/stelle"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_below="@+id/ric"
        android:layout_marginStart="30dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/back"
        android:elevation="10dp"
        android:paddingTop="18dp" />

    <TextView
        android:id="@+id/miestelle"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ric"
        android:layout_centerVertical="true"
        android:layout_marginTop="40dp"
        android:elevation="10dp"
        android:fontFamily="@font/montserrat"
        android:paddingStart="40dp"
        android:paddingEnd="1dp"
        android:text="@string/my_stars"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/stella"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="60dp"
        android:layout_marginBottom="60dp"
        android:background="@drawable/ic_star_24"
        android:contentDescription="@string/max_stars"
        android:elevation="10dp" />

    <TextView
        android:id="@+id/stelleTot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="70dp"
        android:elevation="10dp"
        android:fontFamily="@font/montserrat"
        android:paddingStart="130dp"
        android:paddingEnd="1dp"
        android:text="@string/max_stars"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <View
        android:id="@+id/classifica"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_below="@+id/ric"
        android:layout_marginStart="220dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/back"
        android:elevation="10dp"
        android:paddingStart="18dp"
        android:paddingTop="18dp"
        android:paddingEnd="1dp" />

    <TextView
        android:id="@+id/miapos"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ric"
        android:layout_centerVertical="true"
        android:layout_marginTop="40dp"
        android:elevation="10dp"
        android:fontFamily="@font/montserrat"
        android:paddingStart="230dp"
        android:paddingEnd="1dp"
        android:text="@string/my_position"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/trofeo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="250dp"
        android:layout_marginBottom="60dp"
        android:background="@drawable/trophy"
        android:contentDescription="@string/position"
        android:elevation="10dp" />

    <TextView
        android:id="@+id/pos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="70dp"
        android:elevation="10dp"
        android:fontFamily="@font/montserrat"
        android:paddingStart="310dp"
        android:paddingEnd="1dp"
        android:text="@string/position"
        android:textColor="@color/black"
        android:textSize="20sp" />

</RelativeLayout>
