<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.navigation_drawer.FridgeFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/inserimento_fridge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal"
        android:weightSum="3"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/Fridge_buttonAdd"
            style="@style/button"
            android:layout_width="56dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:linksClickable="false"
            android:text="@string/add"
            android:textSize="20sp"/>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <EditText
            style="@style/textInput"
            android:id="@+id/Fridge_textName"
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:background="@drawable/back"
            android:fontFamily="@font/montserrat"
            android:padding="10dp"
            android:hint="@string/product_name"
            android:textSize="18sp"
            android:layout_marginStart="10dp"
            android:importantForAutofill="no"
            android:inputType="text"/>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <EditText
            android:id="@+id/Fridge_textQta"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:background="@drawable/back"
            android:fontFamily="@font/montserrat"
            android:padding="10dp"
            android:hint="@string/quantity"
            android:inputType="number"
            android:minWidth="48dp"
            android:textColor = "?android:textColorPrimary"
            android:textSize="18sp"
            android:layout_marginStart="10dp"
            app:layout_constraintLeft_toRightOf="@id/Fridge_buttonAdd"
            app:layout_constraintTop_toTopOf="parent"
            android:importantForAutofill="no" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <Spinner
            android:id="@+id/Fridge_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/qta_array"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:dropDownWidth="60dp"
            android:textAlignment="center"
            android:layout_marginStart="10dp"
            app:layout_constraintLeft_toRightOf="@id/text" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview_list_ingredients"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inserimento_fridge" />


</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
</FrameLayout>