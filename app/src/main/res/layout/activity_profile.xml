<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".profile">

    <ImageView
        android:id="@+id/user"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="160dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="70dp"
        android:background="@drawable/user"
        android:elevation="4dp" />

    <TextView
        android:id="@+id/nomeCognome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/montserrat"
        android:text="@string/nome_cognom"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nomeCognome"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/montserrat"
        android:text="@string/email"
        android:textColor="@color/black"
        android:textSize="20dp" />


    <TextView
        android:id="@+id/descrizioneTesto"
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:layout_below="@+id/email"
        android:layout_centerInParent="true"
        android:layout_marginTop="40dp"
        android:background="@drawable/back"
        android:gravity="center"
        android:text="@string/descrizione"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:fontFamily="@font/montserrat"/>

    <View
        android:id="@+id/ricette"
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:layout_below="@+id/descrizioneTesto"
        android:layout_centerInParent="true"
        android:layout_marginTop="25dp"
        android:background="@drawable/back"
        android:paddingLeft="18dp"
        android:paddingTop="18dp" />

        <TextView
            android:id="@+id/le_mie_rice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/descrizioneTesto"
            android:layout_centerVertical="true"
            android:layout_marginTop="35dp"
            android:text="@string/le_mie_rice"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold"
            android:paddingLeft="50dp"
            android:fontFamily="@font/montserrat"/>

    <TextView
        android:id="@+id/spaghetti_a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/le_mie_rice"
        android:layout_centerVertical="true"
        android:layout_marginTop="1dp"
        android:text="@string/spaghetti_a"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:paddingLeft="50dp"
        android:fontFamily="@font/montserrat"/>

    <TextView
        android:id="@+id/risotto_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spaghetti_a"
        android:layout_centerVertical="true"
        android:layout_marginTop="1dp"
        android:text="@string/risotto_all"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:paddingLeft="50dp"
        android:fontFamily="@font/montserrat"/>

    <View
        android:id="@+id/stelle"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_below="@+id/risotto_all"
        android:layout_center="true"
        android:layout_marginTop="28dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/back"
        android:paddingLeft="18dp"
        android:paddingTop="18dp" />

    <TextView
        android:id="@+id/miestelle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/risotto_all"
        android:layout_centerVertical="true"
        android:layout_marginTop="40dp"
        android:text="@string/le_mie_stel"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:paddingLeft="40dp"
        android:textStyle="bold"
        android:fontFamily="@font/montserrat"/>

    <ImageView
        android:id="@+id/stella"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="60dp"
        android:layout_marginBottom="70dp"
        android:background="@drawable/favourite" />

    <TextView
        android:id="@+id/stelleTot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginBottom="80dp"
        android:layout_alignParentBottom="true"
        android:text="@string/stelleTot"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:paddingLeft="130dp"
        android:fontFamily="@font/montserrat"/>

    <View
        android:id="@+id/classifica"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_below="@+id/risotto_all"
        android:layout_center="true"
        android:layout_marginTop="28dp"
        android:layout_marginLeft="220dp"
        android:background="@drawable/back"
        android:paddingLeft="18dp"
        android:paddingTop="18dp" />

    <TextView
        android:id="@+id/miapos"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/risotto_all"
        android:layout_centerVertical="true"
        android:layout_marginTop="40dp"
        android:text="@string/la_mia_posi"
        android:textColor="@color/black"
        android:textSize="17dp"
        android:paddingLeft="230dp"
        android:textStyle="bold"
        android:fontFamily="@font/montserrat"/>

    <ImageView
        android:id="@+id/trofeo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="250dp"
        android:layout_marginBottom="70dp"
        android:background="@drawable/trophy" />

    <TextView
        android:id="@+id/pos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginBottom="80dp"
        android:layout_alignParentBottom="true"
        android:text="@string/pos"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:paddingLeft="310dp"
        android:fontFamily="@font/montserrat"/>

</RelativeLayout>















